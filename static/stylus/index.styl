body
    background-color: #4A4F52

a
    color: #212121

.app-content
    background-color: #f9f9f9

.app-status
    height: 25px
    min-height:25px

.app-stats
    min-height: 60px
    padding: 0 15px

.app-primary
    min-height: 180px
    padding: 0 15px 20px 15px
    position: relative

.app-primary .md-display-2,
.app-primary .md-subhead
    margin: 0

.app-button
    position: absolute
    bottom: -28px
    right: 10%

.app-button[disabled]
    background-color: #dadada !important

.app-secondary
    min-height: 100px

.app-secondary-annotation
    padding: 40px 15px

.file-input
    border: none !important

/* Font Awesome */
md-icon.fa
    font-size: 24px

.fa-spin.faster
    -webkit-animation: fa-spin 1s infinite linear
    animation: fa-spin 1s infinite linear


/* List */

ul.list-items
    margin: 0
    padding: 0

    li
        padding: 25px 15px
        border-bottom: 1px solid #d9d9d9

        &:last-child
        border: none

        .list-item-icon
            color: #717171
            font-size: 30px

        .md-title
            color: #212121
            font-size: 16px
            margin: 0

            a 
                color: #212121
                text-decoration: none

                &:hover
                    text-decoration: underline

        .md-subhead 
            color: #727272
            font-size: 15px
            margin: 0
